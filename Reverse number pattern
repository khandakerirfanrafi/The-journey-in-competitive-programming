#include<stdio.h>
int main()
{
    int N;                          // Variable to store input number
    scanf("%d", &N);                // Read value of N from user

    for(int i = N; i >= 1; i--){    // Loop from N down to 1 (controls rows)
        for(int j = i; j >= 1; j--){ // Print numbers from i down to 1
            printf("%d ", j);       // Print current number
        }
        printf("\n");               // Move to next line after each row
    }
    return 0;                       // End of program
}
