#include <stdio.h>
int main()
{
    int n;
    scanf("%d", &n);          // Input the size of the array
    int arr[n];
    
    // Input array elements
    for (int i = 0; i < n; i++)
    {
        scanf("%d", &arr[i]);
    }

    // Check if the array is a palindrome
    // i starts from beginning, j starts from end
    for (int i = 0, j = n - 1; i < j; i++, j--)
    {
        if(arr[i] != arr[j]){       // If any pair of elements doesn't match
            printf("NO");           // Array is not a palindrome
            return 0;               // Exit immediately
        }
    }

    // If loop completes without mismatch, array is palindrome
    printf("YES");                   
    return 0;
}
//problem link:[https://codeforces.com/group/MWSDmqGsZm/contest/219774/problem/G]
