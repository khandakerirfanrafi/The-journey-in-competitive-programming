#include<stdio.h>

int main()
{
    int n;
    scanf("%d", &n);             // Read the size of the array

    int arr[n];                   // Declare the array

    for(int i = 0; i < n; i++){
        arr[i] = 0;               // Initialize element (optional)
        scanf("%d", &arr[i]);     // Read element from user

        // Replace the element based on its sign
        if(arr[i] < 0){
            arr[i] = 2;           // Negative number becomes 2
            printf("%d ", arr[i]);
        }
        else if(arr[i] > 0){
            arr[i] = 1;           // Positive number becomes 1
            printf("%d ", arr[i]);
        }
        else{
            arr[i] = 0;           // Zero stays 0
            printf("%d ", arr[i]);
        }
    }

    return 0;                     // End of program
}
