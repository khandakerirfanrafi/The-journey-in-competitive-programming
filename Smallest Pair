#include <stdio.h>
#include<limits.h>
int main()
{
    int t;
    scanf("%d", &t);

    
    for (int x = 1; x <= t; x++)
    {
        int n;
        scanf("%d", &n);
        int arr[n];
        for (int i = 0; i < n; i++)
        {
            scanf("%d", &arr[i]);
        }
        int min=INT_MAX;
        for (int i = 0; i < n; i++)
        {
            for (int j = i + 1; j < n; j++)
            {
                int result = arr[i] + arr[j] + j - i;
                int z=result;
                if(min>z){
                    min=z;
                }
            }
            
        }
    printf("%d\n",min);
    }
    
    return 0;
}
//problem link: [https://codeforces.com/group/MWSDmqGsZm/contest/219774/problem/I]
